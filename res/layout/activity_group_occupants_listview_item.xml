<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/common_list_group_item_background"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/group_occupants_item_icon"
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/qq_icon"
            android:scaleType="fitCenter"/>

    <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="成员名称"
            android:paddingLeft="10dp"
            android:id="@+id/group_occupants_item_title"
            android:gravity="center_vertical"/>
    <CheckBox
            android:id="@+id/group_occupants_item_checked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:paddingRight="15dp"/>

</LinearLayout>