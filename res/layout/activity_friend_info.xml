<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/actionbar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/coversation_bg"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp">
                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/person_info_background"
                            android:scaleType="centerCrop"
                            android:id="@+id/imageView"
                            android:layout_gravity="center"/>
                    <ImageView
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:background="@color/gray"
                            android:layout_gravity="center"/>
                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/white"
                            android:id="@+id/person_info_icon"
                            android:src="@drawable/qq_icon"
                            android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>


            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_bg"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip">


                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:layout_marginTop="15.0dip"
                        android:background="@drawable/common_strip_setting_top"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="账户信息"/>

                    <TextView

                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_account"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"
                            />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="用户姓名"/>

                    <TextView

                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_name"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="个性签名"/>

                    <TextView

                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_signature"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="QQ"/>

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_qq"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="联系电话"/>

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_phone"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/sound_and_vibrate"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="@drawable/common_strip_setting_bottom"
                        android:clickable="false"
                        android:focusable="false">

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12.0dip"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:text="邮件"/>

                    <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（空）"
                            android:id="@+id/person_info_text_email"
                            android:layout_marginLeft="100dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>